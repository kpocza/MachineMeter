[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=pi
Group=pi
WorkingDirectory=/home/pi/MachineMeter/CirculatorServer
ExecStart=/usr/bin/gunicorn --workers 1 --bind 0.0.0.0:5001 --access-logfile /var/log/gunicorn/circulatorserver/access.log --error-logfile /var/log/gunicorn/circulatorserver/error.log wsgi:app

[Install]
WantedBy=multi-user.target
