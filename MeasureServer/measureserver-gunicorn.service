[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=pi
Group=pi
WorkingDirectory=/home/pi/MachineMeter/MeasureServer
ExecStart=/usr/bin/gunicorn --workers 1 --timeout 180 --bind 0.0.0.0:5000 --access-logfile /var/log/gunicorn/measureserver/access.log --error-logfile /var/log/gunicorn/measureserver/error.log wsgi:app

[Install]
WantedBy=multi-user.target
